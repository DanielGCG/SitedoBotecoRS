    <main>
        <div class="container">
            <h1>Sobre</h1>
            <div class="divider"></div>
                <h2>Feito com muito amor por</h2>
                <h3>DanielGCG</h3>
            <div class="divider"></div>
                <h2>Agradecimentos Especiais</h2>
                <h3>Carolls</h3>
                <h3>Bags (OiiaOiia)</h3>
            <div class="divider"></div>
            <div class="signature">Tô ficando doido <3</div>
            
            <!-- GIF -->
            <img src="/img/OIIAIOIIIAI.gif" alt="gif animado" id="gif" class="gif" style="margin-top: 20px; cursor: url('/img/cursor-mao.png'), auto;">
            
            <!-- Áudio -->
            <audio id="audio" src="audio/OIIAOIIA.mp3" preload="auto"></audio>
        </div>
    </main>

    <script>
        // Seleciona o GIF e o áudio
        const gif = document.getElementById('gif');
        const audio = document.getElementById('audio');
        
        // Define o volume do áudio para 50%
        audio.volume = 0.5;
    
        // Adiciona evento de clique ao GIF
        gif.addEventListener('click', function() {
            if (audio.paused) {
                audio.play(); // Toca o som quando o GIF é clicado
            } else {
                audio.pause(); // Pausa o som se já estiver tocando
                audio.currentTime = 0; // Reseta o áudio para o começo
            }
        });
    </script>
    
