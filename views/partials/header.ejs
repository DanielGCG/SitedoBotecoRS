<script>
  window.addEventListener("load", function () {
    // Atribuindo a função do menu hamburguer
    document.getElementById("hamburger").onclick = function () {
        const links = document.getElementById("navbar-links");
        links.classList.toggle("active");
    };

    // Fazendo os dropdowns funcionarem
    document
        .querySelectorAll(".navbar-dropdown")
        .forEach(dropdown => {
          // Hover
          dropdown.onmouseenter = () => dropdown.toggleAttribute("data-open", true);
          dropdown.onmouseleave = () => dropdown.toggleAttribute("data-open", false);

          // Click
          dropdown.onclick = (event) => {
            event.stopPropagation(); // Prevents click from propagating to parent elements
            const isOpen = dropdown.hasAttribute("data-open");
            document
              .querySelectorAll(".navbar-dropdown[data-open]")
              .forEach(openDropdown => openDropdown.removeAttribute("data-open"));
            if (!isOpen) {
              dropdown.setAttribute("data-open", true);
            }
          };
        });

    // Fechar dropdowns ao clicar fora
    document.body.onclick = () => {
      document
        .querySelectorAll(".navbar-dropdown[data-open]")
        .forEach(openDropdown => openDropdown.removeAttribute("data-open"));
    };
  });
</script>
