<style>
.header {
  width: 100%;
  background-color: #003f4e;
  color: white;
  box-shadow: 0 2px 6px rgba(0,0,0,0.2);
  position: sticky;
  top: 0;
  z-index: 1000;
}

.header_container {
  margin: 0 auto;
  padding: 12px 20px;
  display: flex;
  justify-content: space-between;
  align-items: start;
}

.header_logo {
  display: flex;
  align-items: center;
  gap: 12px;
  font-family: 'Poppins', sans-serif;
  font-size: 1.5em;
  font-weight: 600;
}

.header_logo img {
  height: 40px;
  width: auto;
}

.header_link {
  display: flex;
  align-items: center;
  gap: 12px;
  color: inherit;
  text-decoration: none;
}

</style>

<header class="header">
    <div class="header_container">
    <div class="header_logo">
    <a href="/MOB" class="header_link">
        <img src="https://static.wixstatic.com/media/93ccdf_4226c4325159400b9760ae288aca6cbc~mv2.png/v1/fill/w_65,h_65,al_c,q_85,usm_0.66_1.00_0.01,enc_avif,quality_auto/Logo%20PNG%20Branco%2001.png" alt="Logo" />
        <span id="labmob-text">LAB MOB 4.0</span><span id="descricao-header"></span>
    </a>
    </div>
    </div>
</header>

<script>
  // Captura a descrição da página da meta tag
  const descricao = document.querySelector('meta[name="description"]')?.getAttribute('content');

  // Insere a descrição dinamicamente no header, se existir
  if (descricao) {
    const spanDescricao = document.getElementById('descricao-header');
    spanDescricao.textContent = `${descricao}`;
    spanDescricao.style.fontSize = '0.9em';
    spanDescricao.style.marginLeft = '8px';
    spanDescricao.style.opacity = '0.8';
  }
</script>
